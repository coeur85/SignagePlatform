@using ScreenWebApp.Models;
@page "/VideoComponent";
@inject ScreenWebApp.Interfaces.iVideo iVid;

@if(Video != null && appInstance !=null){

        <video  muted controls id="bGomlaVideo" onended="playPics(@Video.VideoID)" onerror="playPics(@Video.VideoID)"  >
            <source src="@Video.VideoFilePath" type="video/mp4" id="vsrc">       
       </video>  
       <strong>
         @appInstance.ToString()
       </strong> 
}

      
        
  @code{
    [Parameter]
    public VideoModel Video {get;set;}

    
    private object appInstance {get;set;}
    
    

    protected override  void OnInitialized()
        {
             appInstance = DotNetObjectReference.Create(this);
            
        }
        
        
       
    
  }

 
