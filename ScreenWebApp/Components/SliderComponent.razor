@using ScreenWebApp.Models

@page "/SliderComponent"



 <div class="carousel slide  " data-ride="carousel" data-pause="false" id="slide_@id" >
    <div class="carousel-inner"> 

        @{
            var picList = Pictures.OrderBy(x=> Guid.NewGuid()).ToList();
        }
        @for (int i = 0; i < picList.Count; i++)
        {
            
            string active = ( i == ActiveSlide) ? "active":  "";
            
                <div class="carousel-item @active" >
                  
                        <img src="@picList[i].Base64" class="img-thumbnail bgomlaAddImg"  />
                </div>    
            
        }     
    </div>            
                             
 </div> 



 
 @code{
     
    [Parameter]
    public List<PictureModel> Pictures {get;set;}  
    [Parameter]
    public int ActiveSlide {get;set;}

    private int id{get; set;}
    
    

    protected override void OnParametersSet()
    {
        id = ActiveSlide;
        if(ActiveSlide > (Pictures.Count-1) ){
            ActiveSlide = (ActiveSlide - Pictures.Count);
        }
    }
  
 }